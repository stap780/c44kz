<%= form_tag update_multiple_products_path, method: :put do %>
<div class="modal-dialog" role="document">
	<div class="modal-content">
		<div class="modal-header">
			<h4 class="modal-title" id="modalLabel">Редактирование<br><small>Выбрано: <%=@products.count%></small></h4>
			<button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
		</div>

		<div class="modal-body">
			<%@products.each do |pr|%>
				<%= hidden_field_tag "product_ids[]", pr.id %>
			<% end %>

		<%= fields_for :product_attr do |f| %>
		       <div class="form-group">
		      <%= f.label :catins, 'Категория Инсалес' %><br />
		      <%= f.select :catins, Product.order('id asc').map { |r| [r.catins] }, {:include_blank => true}, {class: "form-control"} %>
		      </div>

		<% end %>

		</div>
		<div class="modal-footer">
			<%= submit_tag "Обновить", class: "btn btn-primary" %>
			<button type="button" class="btn btn-default" data-dismiss="modal">Отменить</button>
		</div>
	</div>
</div>
		<% end %>
